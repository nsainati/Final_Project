<h1>New Varietal Assignment</h1>


<%= form_tag(varietalassignments_url, method: 'post') do %>


  <div>
    <%= label_tag :bottle_id %><br />
   <%= select_tag :bottle_id,
                    options_from_collection_for_select(Bottle.order('name asc'), :id, :name) %>
   </div>

  <div>
    <%= label_tag :varietal_id %><br />
    <%= select_tag :varietal_id,
                    options_from_collection_for_select(Varietal.order('name asc'), :id, :name) %>
  </div>

  <div>
    <%= submit_tag "Create Varietal Assignment" %>
  </div>
<% end %>
