<h1>Bottles</h1>


<% user = User.find_by_id(session["user_id"]) %>

<% if session["user_id"].present? && user.user_type == "admin"%>
       <table>
        <thead>
          <tr>
              <td><%= link_to 'Add a New Bottle', new_bottle_url, class: 'btn' %></td>
              <td><%= link_to 'Add a New Occasion', new_event_url, class: 'btn' %></td>
              <td><%= link_to 'Add a New Flavor', new_flavor_url, class: 'btn' %></td>
              <td><%= link_to 'Add a New Varietal', new_varietal_url, class: 'btn' %></td>
            </tr>
            <tr>
              <td><%= link_to 'Add a New Brand', new_brand_url, class: 'btn' %></td>
              <td><%= link_to 'Assign an Occasion', new_occasion_url, class: 'btn' %></td>
              <td><%= link_to 'Add Flavor Assignments', new_flavorassignment_url(@flavorassignment), class: 'btn' %></td>
              <td><%= link_to 'Add Varietal Assignments', new_varietalassignment_url(@varietalassignment), class: 'btn' %></td>
         </tr>
        </thead>
      </table>
<%else%>
        <br>
<%end%>

<table class="table table-hover">
  <thead>
    <tr>
      <th><%= sortable "name" %></th>
      <th><%= sortable "year" %></th>
      <th><%= sortable "color", "Color of Wine" %></th>
      <th>Actions</th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
  <% @bottles.each do |bottle| %>
    <tr>
        <td><%= bottle.name %></td>
        <td><%= bottle.year %></td>
        <td><%= bottle.color %></td>

      <td><%= link_to 'Show', bottle_url(bottle), class: 'btn' %></td>

   <% user = User.find_by_id(session["user_id"]) %>

    <% if session["user_id"].present? && user.user_type == "admin"%>
          <td><%= link_to 'Edit', edit_bottle_url(bottle), class: 'btn' %></td>
          <td><%= link_to 'Destroy', bottle_url(bottle), method: 'delete', data: { confirm: "Do you really want to delete this bottle?" }, class: 'btn btn-danger' %></td>
  <% else %>
          <td></td>
          <td></td>
  <% end %>

    </tr>
  <% end %>
  </body>
</table>

