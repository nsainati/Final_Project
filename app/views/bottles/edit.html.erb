<h1>Editing Bottle #<%= @bottle.id %></h1>

<%= form_tag(bottle_url(@bottle), method: 'put') do %>

  <div>
    <%= label_tag :name %><br />
    <%= text_field_tag :name, @bottle.name, size: 40, placeholder: "Enter bottle name here..."%>
  </div>

 <div>
    <%= label_tag :brand_id %><br />
    <%= select_tag :brand_id,
                    options_from_collection_for_select(Brand.order('name asc'), :id, :name) %>
  </div>

  <div>
    <%= label_tag :year %><br />
    <%= number_field_tag :year,@bottle.year %>
  </div>

  <div>
    <%= label_tag :color %><br />
    <%= text_field_tag :color, @bottle.color, size: 40, placeholder: "Red, white, rose?"%>
  </div>

<div>
    <%= label_tag :appellation %><br />
    <%= text_field_tag :appellation, @bottle.appellation, size: 40, placeholder: "Where's it from?"%>
  </div>

  <div>
    <%= label_tag :style %><br />
    <%= text_field_tag :style, @bottle.style, size: 40, placeholder: "What's it like?"%>
  </div>

  <div>
    <%= label_tag :Alcohol %><br />
    <%= text_field_tag :Alcohol, @bottle.alcohol, size: 40, placeholder: "How much alcohol? i.e. 12.4"%>
  </div>

  <div>
    <%= label_tag :production %><br />
    <%= text_field_tag :production, @bottle.production, size: 40, placeholder: "How many cases did they make?"%>
  </div>

  <div>
    <%= label_tag :price %><br />
    <%= text_field_tag :price, @bottle.price, size: 40, placeholder: "Suggested retail price, i.e. 25.00"%>
  </div>

  <div>
    <%= label_tag :picture_source %><br />
    <%= text_field_tag :picture_source, @bottle.picture_source, size: 40, placeholder: "Name of picture file"%>
  </div>

  <div>
    <%= label_tag :description %><br />
    <%= text_field_tag :description, @bottle.description, size: 100, placeholder: "What do you think of this wine?"%>
  </div>


  <div>
    <%= submit_tag "Update Bottle", class: 'btn' %>
  </div>

<% end %>
